    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        example = new TextAnalyzer(jTextArea1.getText());
        jTextField1.setText( String.valueOf(example.getTextlength()));
         jTextField2.setText( String.valueOf(example.getLineCount()));
          jTextField3.setText( String.valueOf(example.getTabCount()));
           jTextField4.setText( String.valueOf(example.getSpaceCount()));
           
    }                                        

