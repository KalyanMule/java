    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
       example = new TextAnalyzer(jTextArea1.getText());
       jTextField7.setText(""+example.wordcount1(jTextArea1.getText(),jTextField6.getText()));
    }                                        

